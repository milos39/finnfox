@model finnfox.RacunovodstvenaPromena

@{
    ViewBag.Title = "Edit";
}

<h2>Izmena</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Uredi promenu na računu</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.PromenaId)

        <div class="form-group">
            @Html.LabelFor(model => model.NazivPromene, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NazivPromene, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NazivPromene, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DatumPromene, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @{ Html.EnableClientValidation(false); }
                @Html.TextBoxFor(model => model.DatumPromene, "{0: dd/MM/yy}", new { @class = "form-control", @id = "datepicker", type = "text", @readonly = "true", @required = "true" })
                @{ Html.EnableClientValidation(true); }
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TipPromeneId, "Tip promene", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("TipPromeneId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.TipPromeneId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.KolicinaNovca, "Vrednost", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.KolicinaNovca, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.KolicinaNovca, "", new { @class = "text-danger" })
            </div>
        </div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Sačuvaj izmene" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("⬅Nazad u listu promena", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bs-datepicker")
    @Scripts.Render("~/bundles/select2")

    <script>
        $('#datepicker').datepicker({
            format: "dd.mm.yy",
            todayBtn: "linked",
            language: "rs-latin",
            forceParse: false
        });

        $('#datepicker').keypress(function (e) {
            return false
        });

        $(document).ready(function () {
            $('select').select2({
                language: "sr"
            });
        });

    </script>
}
