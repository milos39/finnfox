@section Scripts {

<script>
    var myChart;
    function addData(chart, label, data) {
        chart.data.labels = label;
        chart.data.datasets[0].data = data;
        chart.update();
    }

    function removeData(chart) {
        chart.data.labels = [];
        chart.data.datasets.forEach((dataset) => {
            dataset.data = [];
        });
        chart.update();
    }


    function drawOrUpdateChart(godina) {
        $.get("http://localhost:1091/RacunovodstvenaPromenas/pieChart?godina=" + godina, function (data, status) {
            
            if ($("#myChart").hasClass("chartjs-render-monitor")) {
                removeData(myChart);
                addData(myChart, data.nasloviSaProcentima, data.kolicineNovcaPoTipu);
            } else {
                var ctx = document.getElementById('myChart');

                if (data.nasloviSaProcentima.includes("ušteda")) {
                        myChart = new Chart(ctx, {
                        type: 'doughnut',
                        data: {
                            labels: data.nasloviSaProcentima,
                            datasets: [{
                                label: 'Udeo troškova u ukupnim primanjima',
                                data: data.kolicineNovcaPoTipu,
                                backgroundColor: [
                                    '#0060df',
                                    '#ff9f40',
                                    '#ff6384',
                                    '#4bc0c0',
                                    '#ffe900',
                                    '#ff0039',
                                    '#a1ff66'
                                ]
                            }]
                        },
                        options: {

                        }
                    });
                } else {
                        myChart = new Chart(ctx, {
                        type: 'bar',
                        data: {
                            labels: data.nasloviSaProcentima,
                            datasets: [{
                                label: 'Udeo troškova u ukupnim primanjima',
                                data: data.kolicineNovcaPoTipu,
                                backgroundColor: [
                                    '#0060df',
                                    '#ff9f40',
                                    '#ff6384',
                                    '#4bc0c0',
                                    '#ffe900',
                                    '#ff0039',
                                    '#a1ff66'
                                ]
                            }]
                        },
                        options: {

                        }
                    });
                }
            }
        });
    };

