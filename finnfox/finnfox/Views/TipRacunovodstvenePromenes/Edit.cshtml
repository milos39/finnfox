@model finnfox.TipRacunovodstvenePromene

@{
    ViewBag.Title = "Edit";
}

<h2>Izmeni tip</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>finansijske promene</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.TipPromeneId)

        <div class="form-group">
            @Html.LabelFor(model => model.NazivTipa, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NazivTipa, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NazivTipa, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PozitivnostTipa, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.PozitivnostTipa)
                    @Html.ValidationMessageFor(model => model.PozitivnostTipa, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="sačuvaj izmene" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div class="mt-70">
    @Html.ActionLink("⬅Nazad u listu tipova promena", "Index", "TipRacunovodstvenePromenes", null, htmlAttributes: new { @class = "btn btn-default" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
