@model finnfox.TipRacunovodstvenePromene
@Styles.Render("~/Content/switch")
@{
    ViewBag.Title = "Create";
}

<h2>Kreiraj novi tip</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>finansijske promene</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.NazivTipa, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NazivTipa, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NazivTipa, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <span class="col-md-2 control-label">Prihod / Rashod</span>
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.PozitivnostTipa)
                    @*@Html.LabelFor(model => model.PozitivnostTipa, htmlAttributes: new { @class = "label-for-switch" })*@
                    @Html.ValidationMessageFor(model => model.PozitivnostTipa, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Kreiraj novi tip promene" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div class="mt-70">
    @Html.ActionLink("⬅Nazad u listu tipova promena", "Index", "TipRacunovodstvenePromenes", null, htmlAttributes: new { @class = "btn btn-default" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        var checkBox = $("#PozitivnostTipa");
        var label = $(".label-for-switch")[0];

         $("<label class='label-for-switch' for='PozitivnostTipa'>Prihod / Rashod</label>").insertAfter(checkBox);

    </script>
}
